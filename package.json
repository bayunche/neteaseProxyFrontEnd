{
  "name": "music-player-universal",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/web",
    "dev:web": "npm run dev --workspace=packages/web", 
    "dev:mobile": "npm run dev --workspace=packages/mobile",
    "build": "node scripts/build.js all",
    "build:web": "npm run build --workspace=packages/web",
    "build:mobile": "node scripts/build.js mobile", 
    "build:shared": "node scripts/build.js shared",
    "build:mobile:android": "node scripts/build.js mobile:android",
    "build:mobile:ios": "node scripts/build.js mobile:ios",
    "build:mobile:preview": "node scripts/build.js mobile:preview",
    "build:all": "npm run build:shared && npm run build:web && npm run build:mobile",
    "deploy:mobile:eas": "node scripts/deploy.js mobile:eas",
    "deploy:mobile:build:android": "node scripts/deploy.js mobile:build:android",
    "deploy:mobile:build:ios": "node scripts/deploy.js mobile:build:ios",
    "deploy:mobile:build:preview": "node scripts/deploy.js mobile:build:preview",
    "deploy:mobile:submit:android": "node scripts/deploy.js mobile:submit:android",
    "deploy:mobile:submit:ios": "node scripts/deploy.js mobile:submit:ios",
    "lint": "npm run lint --workspace=packages/web && npm run lint --workspace=packages/mobile",
    "lint:web": "npm run lint --workspace=packages/web",
    "lint:shared": "npm run lint --workspace=packages/shared --if-present", 
    "lint:mobile": "npm run lint --workspace=packages/mobile",
    "type-check": "npm run type-check --workspace=packages/shared --if-present && npm run type-check --workspace=packages/mobile --if-present",
    "type-check:shared": "npm run type-check --workspace=packages/shared --if-present",
    "type-check:mobile": "npm run type-check --workspace=packages/mobile --if-present",
    "test": "npm run test --workspace=packages/shared --if-present && npm run test --workspace=packages/mobile --if-present",
    "test:shared": "npm run test --workspace=packages/shared --if-present",
    "test:mobile": "npm run test --workspace=packages/mobile --if-present",
    "proxy": "node proxy-server.js",
    "start": "concurrently \"npm run proxy\" \"npm run dev:mobile\"",
    "clean": "rm -rf packages/*/node_modules packages/*/dist packages/*/build",
    "clean:install": "npm run clean && npm install",
    "postinstall": "npm run build:shared --if-present"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "typescript": "~5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}